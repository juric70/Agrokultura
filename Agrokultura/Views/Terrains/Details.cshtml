@model Agrokultura.Models.Terrain

@{
    ViewData["Title"] = "Details";
}


<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Detalji terena</h1>

        <dl class="row form-group-update_create">
        <dt class = "col-sm-4">
            Naziv:
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-4">
            Prisutnost sunca:
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.SunPersence)
        </dd>
        <dt class = "col-sm-4">
            Nagib zemlje:
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.GroundSlope)
        </dd>
    </dl>
        <div class="btn edit-data-btn">
            <a asp-action="Edit" asp-route-id="@Model?.Id">Uredi</a>
        </div>
        <div class="btn back-to-list">
            <a href="javascript:history.back()">Natrag</a>
        </div>
    </div>
</div>

>
