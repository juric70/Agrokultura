@model Agrokultura.Models.Contract

<h1>Edit Contract</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProviderId" class="control-label">Provider:</label>
                <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.ProviderId">
                    <option value="">-- Select Provider --</option>
                </select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BeneficiaryId" class="control-label">Beneficiary:</label>
                <select asp-for="BeneficiaryId" class="form-control" asp-items="ViewBag.BeneficiaryId">
                    <option value="">-- Select Beneficiary --</option>
                </select>
                <span asp-validation-for="BeneficiaryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateOfConclusion" class="control-label">Date of Conclusion:</label>
                <input asp-for="DateOfConclusion" class="form-control" />
                <span asp-validation-for="DateOfConclusion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateOfExpiration" class="control-label">Date of Expiration:</label>
                <input asp-for="DateOfExpiration" class="form-control" />
                <span asp-validation-for="DateOfExpiration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContractType" class="control-label">Contract Type:</label>
                <input asp-for="ContractType" class="form-control" />
                <span asp-validation-for="ContractType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
