@model Agrokultura.Models.Plot

@{
    ViewData["Title"] = "Create";
}
<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Kreiraj novu parcelu!</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-group-update_create">
                <label asp-for="Name" class="control-label">Naziv:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Coordinates" class="control-label">Koordinate:</label>
                <input asp-for="Coordinates" class="form-control" />
                <span asp-validation-for="Coordinates" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Longitudes" class="control-label">Dužina stranica:</label>
                <input asp-for="Longitudes" class="form-control" />
                <span asp-validation-for="Longitudes" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Corners" class="control-label">Kutovi:</label>
                <input asp-for="Corners" class="form-control" />
                <span asp-validation-for="Corners" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="GroundId" class="control-label">Vrsta tla:</label>
                <select asp-for="GroundId" class="form-control" asp-items="ViewBag.GroundId"><option value="" disabled selected>Odaverite tlo:</option></select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="TerrainId" class="control-label">Vrsta terena:</label>
                <select asp-for="TerrainId" class="form-control" asp-items="ViewBag.TerrainId"><option value="" disabled selected>Odaverite vrstu terena</option></select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="OwnerId" class="control-label">Vlasnik:</label>
                <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.OwnerId"><option value="" disabled selected>Odaverite vlasnika</option></select>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Kreiraj" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a asp-action="Index">Natrag</a>
        </div>
    </div>
</div>